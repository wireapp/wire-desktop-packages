{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2016", "es2017.object", "es2017.string"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "dist/commonjs",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "src/main",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node"],

    // Fix for Electron double definitions
    "baseUrl": ".",
    "paths": {
      "electron": ["./node_modules/electron/electron.d.ts"]
    }
  },
  "exclude": ["dist/commonjs", "node_modules", "src/test"]
}
