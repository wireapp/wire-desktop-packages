{
  "build": {
    "appId": "com.wire.certificatecheck",
    "mac": {
      "category": "Network"
    },
    "linux": {
      "category": "Network"
    }
  },
  "description": "Tool to check that Wire's domains use the expected certificate.",
  "dependencies": {
    "@wireapp/certificate-check": "0.1.8",
    "minimist": "1.2.0"
  },
  "devDependencies": {
    "@types/node": "~10",
    "electron": "5.0.6",
    "electron-builder": "20.44.4",
    "rimraf": "2.6.3"
  },
  "files": [
    "electron"
  ],
  "license": "GPL-3.0",
  "main": "main.js",
  "name": "@wireapp/certificate-check-tool",
  "private": true,
  "productName": "Certificate Check Tool",
  "repository": "https://github.com/wireapp/wire-desktop-packages/tree/master/packages/certificate-check-tool",
  "scripts": {
    "build": "exit 0",
    "build:linux": "yarn clean && electron-builder --linux deb --x64",
    "build:macos": "yarn clean && electron-builder --mac --x64",
    "build:windows": "yarn clean && electron-builder --win --ia32",
    "clean": "rimraf dist",
    "dist": "exit 0",
    "pack": "yarn clean && electron-builder --dir",
    "start": "electron . --devtools",
    "test": "exit 0"
  },
  "version": "0.2.6"
}
